<% if user_signed_in? %>
  <li><%= link_to current_user.full_name %></li>
  <li><%= link_to t('.sign_out'), destroy_user_session_path, method: :delete %></li>
<% else %>
  <li><%= link_to t('.login'), new_user_session_path %></li>
  <li><%= link_to t('.register'), new_user_registration_path %></li>
  <li>
    <%= link_to user_omniauth_authorize_path(:github) do %>
      <span class="fa fa-github"></span> Github
    <% end %>
  </li>
<% end %>
